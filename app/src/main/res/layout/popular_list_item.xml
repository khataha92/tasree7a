<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/WHITE">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:layout_marginBottom="15dp"
        android:background="@color/BG_GRAY"
        android:elevation="2dp">

        <RoundedCornersImageView
            android:id="@+id/sallon_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/salon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sallon_image"
            android:background="@color/WHITE"
            android:minHeight="55dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/sallon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.3dp"
                android:layout_marginTop="13.7dp"
                android:text="Malki Sallon,"
                android:textColor="@color/APP_BLACK"
                android:textSize="19.3sp" />

            <TextView
                android:id="@+id/salon_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/sallon_name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/sallon_name"
                android:text="Ramallah"
                android:textColor="@color/APP_BLACK"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/is_popular"
                android:layout_width="25dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp"
                android:layout_marginTop="13.7dp"
                android:src="@drawable/like" />

            <CustomRatingBar
                android:id="@+id/salon_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/sallon_name"
                android:layout_below="@+id/sallon_name"
                android:layout_marginTop="3dp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>