<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="customFonts" format="enum">
        <enum name="BOOK" value="0" />
        <enum name="HEAVY" value="1" />
        <enum name="BLACK" value="2" />
        <enum name="MEDIUM" value="3" />
        <enum name="ROMAN" value="4" />
    </attr>

    <attr name="SortType" format="enum">

        <enum name="Rating" value="1"/>
        <enum name="Distance" value="2" />
        <enum name="Price" value="3" />

    </attr>

    <attr name="FilterType" format="enum">

        <enum name="ALL" value="3" />
        <enum name="Available" value="2"/>
        <enum name="Favorite" value="1"/>

    </attr>

    <declare-styleable name="CustomButton">
        <attr name="customButtonText" format="string"/>
        <attr name="customButtonTextSize" format="dimension"/>
        <attr name="customButtonRadius" format="integer"/>
        <attr name="customButtonTextColor" format="color"/>
        <attr name="customButtonBackgroundColor" format="color"/>
        <attr name="customButtonBackgroundDrawable" format="reference"/>
        <attr name="customButtonStrokeColor" format="color"/>
        <attr name="customButtonImageSrc" format="reference"/>
        <attr name="makeIconWhite" format="boolean"/>
        <attr name="customFonts" />
    </declare-styleable>

    <declare-styleable name="CircularCheckBox">

        <attr name="setChecked" format="boolean" />
        <attr name="customCheckboxText" format="string" />

    </declare-styleable>

    <declare-styleable name="CustomRadioButton">

        <attr name="text" format="string"/>
        <attr name="SortType" />
        <attr name="FilterType" />

    </declare-styleable>

    <declare-styleable name="CustomSwitch">

        <attr name="light" format="boolean"/>
        <attr name="checked" format="boolean" />
        <attr name="stroke" format="reference" />

    </declare-styleable>

    <declare-styleable name="CustomRatingBar">

        <attr name="rating" format="float"/>
    </declare-styleable>
</resources>