<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="221dp"
    android:background="@color/WHITE">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:background="@color/BG_GRAY"
        android:elevation="2dp"
        tools:targetApi="lollipop">

        <com.tasree7a.customcomponent.RoundedCornersImageView
            android:id="@+id/sallon_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/salon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sallon_image"
            android:background="@color/WHITE"
            android:minHeight="55dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/salon_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/sallon_name"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:text="Ramallah"
                android:textColor="@color/APP_BLACK"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/sallon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12.3dp"
                android:layout_marginTop="13.7dp"
                android:layout_toStartOf="@+id/salon_city"
                android:text="Malki Sallon,"
                android:textColor="@color/APP_BLACK"
                android:textSize="19.3sp"
                tools:ignore="HardcodedText" />


            <ImageView
                android:id="@+id/is_popular"
                android:layout_width="25dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="13.7dp"
                android:src="@drawable/like" />

            <com.tasree7a.customcomponent.CustomRatingBar
                android:id="@+id/salon_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignEnd="@+id/sallon_name"
                android:layout_below="@+id/sallon_name"
                android:layout_marginTop="3dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>