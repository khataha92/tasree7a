<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/BG_GRAY">


    <ImageView
        android:id="@+id/side_menu_header"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login_bg"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/side_menu_header"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="-34dp"
        android:scaleType="centerCrop"
        android:src="@drawable/person"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/side_menu_header"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/profile_image"
        android:textColor="@color/APP_GREEN"
        android:textSize="13.3sp"
        tools:text="Sam Jackson "
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/close_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="7dp"
            android:padding="10dp"
            android:src="@drawable/ic_close_menu"
            />

        <TextView
            android:id="@+id/ar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="@string/AR"
            />

        <com.tasree7a.customcomponent.CustomSwitch
            android:id="@+id/switch_item"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/ar"
            app:checked="true" />

        <TextView
            android:id="@+id/EN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/switch_item"
            android:text="@string/EN"
            android:textColor="@color/APP_GREEN"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>