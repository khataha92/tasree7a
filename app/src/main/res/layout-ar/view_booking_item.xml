<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/BG_GRAY"
    android:padding="17dp">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/WHITE"
        android:elevation="10dp"
        android:paddingBottom="30dp">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="15dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/booking_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="17dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="@string/BOOKING_ID"
                android:textColor="@color/APP_BLACK"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/booking_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/booking_id_label"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/booking_id_label"
                android:gravity="center_vertical"
                android:text="11111111"
                android:textColor="@color/APP_BLACK"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/badge"
                android:layout_width="21dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="-0dp"
                android:background="@color/APP_GREEN"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/badge_image"
                    android:layout_width="16.3dp"
                    android:layout_height="11.7dp"
                    android:layout_marginBottom="11.7dp"
                    android:layout_marginLeft="2.3dp"
                    android:layout_marginRight="2.3dp"
                    android:layout_marginTop="8.7dp"
                    android:src="@drawable/accepted" />

                <RelativeLayout
                    android:id="@+id/rlv2"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="-8dp"
                    android:background="@drawable/triangle" />

            </LinearLayout>

            <TextView
                android:id="@+id/salon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/booking_id_label"
                android:layout_below="@+id/booking_id_label"
                android:layout_marginTop="18dp"
                android:text="Samer Salon"
                android:textColor="@color/APP_GREEN"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/salon_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/salon_name"
                android:layout_below="@+id/salon_name"
                android:layout_marginRight="17dp"
                android:text="Ramallah, Almasyoun, Mahmoud darwish st."
                android:textColor="@color/APP_BLACK" />

            <View
                android:id="@+id/salon_details_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/salon_address"
                android:layout_marginTop="12sp"
                android:background="@color/BG_GRAY" />

        </RelativeLayout>

        <TextView
            android:id="@+id/booking_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/header"
            android:layout_below="@+id/header"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Wed, Apr 22, 2017, 12:15 PM - 12:45 PM"
            android:textColor="@color/APP_BLACK"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/booking_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/booking_time"
            android:orientation="vertical" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container"
        android:layout_marginTop="-34dp"
        android:elevation="30dp">

        <ImageView
            android:id="@+id/salon_location"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/cancel_booking"
            android:background="@drawable/circle_img"
            android:scaleType="centerInside"
            android:src="@drawable/ic_salon_rout" />

        <ImageView
            android:id="@+id/salon_reject"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/cancel_booking"
            android:background="@drawable/circle_img"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close_menu"
            android:tint="@color/LIGHT_RED" />

        <ImageView
            android:id="@+id/cancel_booking"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_img"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close_menu" />

        <ImageView
            android:id="@+id/salon_phone"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/cancel_booking"
            android:background="@drawable/circle_img"
            android:scaleType="centerInside"
            android:src="@drawable/ic_call" />

        <ImageView
            android:id="@+id/salon_accept"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/cancel_booking"
            android:background="@drawable/circle_img"
            android:scaleType="centerInside"
            android:src="@drawable/ic_check_white_48dp"
            android:tint="@color/APP_GREEN" />
    </RelativeLayout>
</RelativeLayout>