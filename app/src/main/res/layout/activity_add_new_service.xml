<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG_GRAY">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:background="@color/WHITE">

        <ImageView
            android:id="@+id/back"
            android:layout_width="31dp"
            android:layout_height="41dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            tools:ignore="ContentDescription" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/GRAY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/SERVICES"
            android:textAllCaps="true"
            android:textColor="@color/APP_TEXT_COLOR"
            android:textSize="19.3sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_product_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/top_bar"
        android:layout_centerHorizontal="true"
        android:layout_margin="19dp"
        android:background="@drawable/shadow_bg">

        <ImageView
            android:id="@+id/add_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_cam"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/service_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_product_image"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/service_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_marginTop="13dp"
            android:hint="@string/SERVICE_TYPE"
            android:inputType="text"
            android:textColor="@color/BLACK"
            android:textColorHint="@color/BLACK"
            android:textSize="14.8sp" />

        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_marginTop="13dp"
            android:hint="@string/PRICE"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/BLACK"
            android:textColorHint="@color/BLACK"
            android:textSize="14.8sp" />

        <EditText
            android:id="@+id/duration_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_marginTop="13dp"
            android:drawableEnd="@drawable/ic_dropdown_arrow"
            android:hint="@string/DURATION_TIME"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/BLACK"
            android:textColorHint="@color/BLACK"
            android:textSize="14.8sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/service_info"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.tasree7a.customcomponent.CustomButton
            android:id="@+id/cancel"
            android:layout_width="145dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/shadow"
            android:paddingBottom="10dp"
            app:customButtonRadius="20"
            app:customButtonText="@string/CANCEL"
            app:customButtonTextColor="@color/WHITE"
            app:customButtonTextSize="19sp" />


        <com.tasree7a.customcomponent.CustomButton
            android:id="@+id/apply"
            android:layout_width="145dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:background="@drawable/shadow2"
            android:paddingBottom="10dp"
            app:customButtonRadius="20"
            app:customButtonText="@string/SAVE"
            app:customButtonTextColor="@color/WHITE"
            app:customButtonTextSize="19sp" />

    </LinearLayout>
</RelativeLayout>