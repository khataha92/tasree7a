<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/WHITE">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/WHITE"
        android:visibility="visible">

        <ImageView
            android:id="@+id/back"
            android:layout_width="31dp"
            android:layout_height="41dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:padding="10dp"
            android:src="@drawable/ic_back"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/GRAY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/INFORMATION"
            android:textAllCaps="true"
            android:textColor="@color/APP_TEXT_COLOR"
            android:textSize="19sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/top_bar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/BG_GRAY"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/change_image"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_margin="17dp"
                android:background="@drawable/shadow_bg">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/profile_cam"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="@string/BUSINESS_INFO"
                android:textColor="@color/APP_TEXT_COLOR"
                android:textSize="19.3sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="17dp"
                android:background="@drawable/shadow_bg"
                android:orientation="vertical"
                >

                <EditText
                    android:id="@+id/salon_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/SALON_NAME"
                    android:textColor="@color/APP_TEXT_COLOR"
                    android:textColorHint="@color/APP_TEXT_COLOR"
                    />

                <EditText
                    android:id="@+id/owner_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/OWNER_NAME_PLACEHOLDER"
                    android:textColor="@color/APP_TEXT_COLOR"
                    android:textColorHint="@color/APP_TEXT_COLOR"
                    />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/EMAIL"
                    android:textColor="@color/APP_TEXT_COLOR"
                    android:textColorHint="@color/APP_TEXT_COLOR"
                    />

                <!--<EditText-->
                <!--android:id="@+id/currency"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="45dp"-->
                <!--android:layout_marginLeft="25dp"-->
                <!--android:layout_marginRight="25dp"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:drawableRight="@drawable/ic_dropdown_arrow"-->
                <!--android:hint="@string/CURRENCY"-->
                <!--android:textColor="@color/APP_TEXT_COLOR"-->
                <!--android:textColorHint="@color/APP_TEXT_COLOR"-->
                <!--/>-->

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/ADDRESS"
                    android:textColor="@color/APP_TEXT_COLOR"
                    android:textColorHint="@color/APP_TEXT_COLOR"
                    />

                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/MOBILE"
                    android:textColor="@color/APP_TEXT_COLOR"
                    android:textColorHint="@color/APP_TEXT_COLOR"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="@string/WORKING_DAYS"
                android:textColor="@color/APP_TEXT_COLOR"
                android:textSize="19.3sp"
                />

            <com.tasree7a.CustomComponent.CustomCheckableGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="17dp"
                android:background="@drawable/shadow_bg"
                android:gravity="center"
                android:padding="9dp"
                >

                <com.tasree7a.CustomComponent.CircularCheckBox
                    android:id="@+id/sat"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="6dp"
                    app:customCheckboxText="@string/SAT"
                    app:setChecked="true"
                    />

                <com.tasree7a.CustomComponent.CircularCheckBox
                    android:id="@+id/sun"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="6dp"
                    app:customCheckboxText="@string/SUN"
                    app:setChecked="true"
                    />

                <com.tasree7a.CustomComponent.CircularCheckBox
                    android:id="@+id/mon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="6dp"
                    app:customCheckboxText="@string/MON"
                    app:setChecked="false"
                    />

                <com.tasree7a.CustomComponent.CircularCheckBox
                    android:id="@+id/tue"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="6dp"
                    app:customCheckboxText="@string/TUE"
                    app:setChecked="true"
                    />

                <com.tasree7a.CustomComponent.CircularCheckBox
                    android:id="@+id/wed"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="6dp"
                    app:customCheckboxText="@string/WED"
                    app:setChecked="true"
                    />

                <com.tasree7a.CustomComponent.CircularCheckBox
                    android:id="@+id/thu"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="6dp"
                    app:customCheckboxText="@string/THU"
                    app:setChecked="true"
                    />

                <com.tasree7a.CustomComponent.CircularCheckBox
                    android:id="@+id/fri"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="6dp"
                    app:customCheckboxText="@string/FRI"
                    app:setChecked="true"
                    />

            </com.tasree7a.CustomComponent.CustomCheckableGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="@string/OPENING_HOURS"
                android:textColor="@color/APP_TEXT_COLOR"
                android:textSize="19.3sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="17dp"
                android:background="@drawable/shadow_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="9dp"
                >

                <TextView
                    android:id="@+id/from_hours"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="34dp"
                    android:background="@drawable/rounded_corders_bg"
                    android:gravity="center"
                    android:text="10:00 AM"
                    android:textColor="@color/WHITE"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/APP_BLACK"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/to_hours"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="34dp"
                    android:background="@drawable/rounded_corders_bg"
                    android:gravity="center"
                    android:text="11:00 PM"
                    android:textColor="@color/WHITE"
                    android:textSize="15sp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="@string/STAFF"
                android:textColor="@color/APP_TEXT_COLOR"
                android:textSize="19.3sp"
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="17dp"
                >

                <com.tasree7a.CustomComponent.SalonStaffContainer
                    android:id="@+id/salon_staff_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.tasree7a.CustomComponent.CustomButton
                    android:id="@+id/cancel"
                    android:layout_width="145dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/shadow"
                    android:paddingBottom="10dp"
                    app:customButtonRadius="20"
                    app:customButtonText="@string/CANCEL"
                    app:customButtonTextColor="@color/WHITE"
                    app:customButtonTextSize="19sp"/>


                <com.tasree7a.CustomComponent.CustomButton
                    android:id="@+id/save"
                    android:layout_width="145dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/shadow2"
                    android:paddingBottom="10dp"
                    app:customButtonRadius="20"
                    app:customButtonText="@string/SAVE"
                    app:customButtonTextColor="@color/WHITE"
                    app:customButtonTextSize="19sp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>